<div class="container-fluid mt-5">
	<div class="container d-flex justify-content-center">
		<div class="d-flex justify-content-start align-items-start flex-wrap">

			{{#if products.length}}
				{{#each products}}
					<a href="/{{this._id}}">
						<div class="card m-1" style="width: 300px; height: 350px;">
  							<img src={{this.image}} class="card-img-top">
  							<div class="card-body">
    							<h6 class="card-text text-truncate">{{this.name}}</h6>
  							</div>
						</div>	
					</a>
				{{/each}}
			{{/if}}
		</div>
	</div>
</div>

<script src="/js/index.js"/>