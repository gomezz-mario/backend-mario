<div class="container-fluid mt-5">
	<div class="container d-flex justify-content-center">
		<div class="d-flex justify-content-start align-items-start flex-wrap">

			{{#if products.length}}
				{{#each products}}
					<div class="card m-1" style="width: 300px; height: 350px; cursor: pointer;">
  						<img src={{this.img}} class="card-img-top">
  						<div class="card-body">
    						<h6 class="card-text text-truncate">{{this.name}}</h6>
  						</div>
					</div>	
				{{/each}}
			{{/if}}
		</div>

		
	</div>
</div>